<launch>

  <!-- Balser3 -->
  <arg name="camera1_number" default="21511094"/>
  <arg name="node1_name" default="cam3"/>
  <arg name="config1_file" default="$(find intrinsic_cal)/launch/mcc/ACA1920_25gc_21511094.yaml" /> 

  <!--Basler4-->
  <arg name="camera2_number" default="21511083"/> 
  <arg name="node2_name" default="cam4"/>
  <arg name="config2_file" default="$(find intrinsic_cal)/launch/mcc/ACA1920_25gc_21511083.yaml" /> 

  <include  file="$(find industrial_extrinsic_cal)/launch/basler_camera.launch" >
     <arg name="camera_number" value="$(arg camera1_number)"/>
     <arg name="node_name"     value="$(arg node1_name)"/>
     <arg name="config_file"   value="$(arg config1_file)"/>
  </include>

  <include  file="$(find industrial_extrinsic_cal)/launch/basler_camera.launch" >
     <arg name="camera_number" value="$(arg camera2_number)"/>
     <arg name="node_name"     value="$(arg node2_name)"/>
     <arg name="config_file"   value="$(arg config2_file)"/>
  </include>


  <node pkg="intrinsic_cal" type="robocyl_scal" name="robocyl_intrinsic_calibration" output="screen" >
          <param name="left_image_topic"  value="Basler$(arg camera1_number)/image_raw" />
          <param name="right_image_topic" value="Basler$(arg camera2_number)/image_raw" />
          <param name="left_camera_name"  value="Basler$(arg camera1_number)" />
          <param name="right_camera_name" value="Basler$(arg camera2_number)" />	
          <param name="target_rows" value="5" />
          <param name="target_cols" value="9" />
          <param name="target_circle_dia" value="0.0020" />
          <param name="target_spacing" value="0.029" />
          <param name="num_camera_locations" value="16" />
          <param name="camera_spacing" value=".050" />
          <param name="target_to_rail_distance" value="2.0" />
          <param name="use_circle_detector" value="false"/>
          <param name="move_client" value="/move_meters"/>
          <param name="power_client" value="/power_io"/>
          <param name="home_client" value="/home"/>
  </node>


  <node name="observation_view" pkg="image_view" type="image_view" >
      <remap to="/observer_results_image" from="image"/>
  </node>

</launch>